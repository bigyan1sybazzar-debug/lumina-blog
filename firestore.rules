rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- HELPERS ---
    function isAdmin() {
      return request.auth != null && (
        request.auth.uid == 'l2HzKynx5oetUVpNWeMKaQNpkS13' || 
        request.auth.token.email == 'admin@lumina.blog' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }

    function isSignedIn() {
      return request.auth != null;
    }

    // --- NEW: HIGHLIGHTS (Fixed AdminDashboard.tsx:909) ---
    match /highlights/{highlightId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- PROMPT LIBRARY (Fixed db.ts Errors) ---
    match /prompt_categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /prompt_subcategories/{subcategoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /prompts/{promptId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- LIVE & ADMIN DATA ---
    match /live_matches/{matchId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /keywords/{keywordId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /live_links/{linkId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    match /live_streams/{streamId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /iptv_channels/{channelId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /iptv_categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- USERS ---
    match /users/{userId} {
      allow read: if true; 
      allow write: if isAdmin() || (isSignedIn() && request.auth.uid == userId);
    }

    // --- FRIEND REQUESTS ---
    match /friendRequests/{requestId} {
      allow list, get: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.fromId == request.auth.uid;
      allow update: if isSignedIn() && (resource.data.toId == request.auth.uid || isAdmin());
      allow delete: if isSignedIn() && (resource.data.toId == request.auth.uid || resource.data.fromId == request.auth.uid || isAdmin());
    }

    // --- DIRECT MESSAGES ---
    match /direct_messages/{messageId} {
      allow list, get: if isSignedIn() && (request.auth.uid in resource.data.participants || isAdmin());
      allow create: if isSignedIn() && (request.auth.uid in request.resource.data.participants);
      allow update: if isSignedIn() && (request.auth.uid in resource.data.participants || isAdmin());
      allow delete: if isAdmin();
    }

    // --- CONTENT & POLLS ---
    match /polls/{pollId} {
      allow read: if true;
      allow create, update: if isSignedIn();
      allow delete: if isAdmin();
    }

    match /posts/{postId} { allow read: if true; allow write: if isAdmin(); }
    match /categories/{categoryId} { allow read: if true; allow write: if isAdmin(); }
    
    match /comments/{commentId} { 
      allow read: if true; 
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
    }
    
    match /reviews/{reviewId} { 
      allow read: if true; 
      allow create: if isSignedIn(); 
      allow update, delete: if isAdmin(); 
    }

    match /live_comments/{commentId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
    }

    // --- INFRASTRUCTURE & SETTINGS ---
    match /calls/{callId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn() && (resource.data.receiverId == request.auth.uid || resource.data.callerId == request.auth.uid);
      allow create: if isSignedIn() && request.resource.data.callerId == request.auth.uid;
      allow update: if isSignedIn() && (resource.data.receiverId == request.auth.uid || resource.data.callerId == request.auth.uid);
      
      match /callerCandidates/{candidateId} { allow read, write: if isSignedIn(); }
      match /receiverCandidates/{candidateId} { allow read, write: if isSignedIn(); }
    }

    match /chats/{chatId} {
      allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow write: if isAdmin() || (isSignedIn() && (resource == null || resource.data.userId == request.auth.uid));
    }

    match /config/{configId} { allow read: if true; allow write: if isAdmin(); }
    match /settings/{docId} { allow read: if true; allow write: if isAdmin(); }

    // --- MARKETPLACE ---
    match /phone_listings/{listingId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || (isSignedIn() && resource.data.sellerId == request.auth.uid);
    }

    match /buyer_requests/{requestId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || (isSignedIn() && resource.data.buyerId == request.auth.uid);
    }

    // --- ANALYTICS & TRAFFIC ---
    match /traffic/{sessionId} {
      allow create, update: if true;
      allow get, list: if isSignedIn();
      allow delete: if isAdmin();
    }

    // --- NEWSLETTER SUBSCRIBERS ---
    match /subscribers/{subscriberId} {
      allow get, create, update: if true;
      allow list, delete: if isAdmin();
    }

    // --- FALLBACK ---
    match /{document=**} {
      allow read, write: if false;
    }
  }
}