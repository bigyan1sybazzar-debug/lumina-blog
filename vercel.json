{
  "version": 2,

  "buildCommand": "npm run build",
  "outputDirectory": "dist",

  "functions": {
    "api/ssr.ts": {
      "runtime": "nodejs24.x"
    }
  },

  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "www.bigyann.com.np"
        }
      ],
      "destination": "https://bigyann.com.np/$1",
      "statusCode": 301
    },
    {
      "source": "/blog/fm3g9qgx4JGycFGkc3M3",
      "destination": "/blog/samsung-galaxy-a24-price-in-nepal",
      "statusCode": 301
    }
  ],

  "routes": [
    {
      "src": "^/(assets|favicon|robots.txt|sitemap.xml)(/.*)?$",
      "dest": "/$1$2"
    },
    {
      "src": "^/(.*)$",
      "dest": "/api/ssr"
    }
  ],

  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/xml; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, s-maxage=3600, stale-while-revalidate=60"
        }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, s-maxage=3600"
        }
      ]
    }
  ]
}
